doctype html
html(lang='en')
  head
    include ./templates/header.jade
    include ./templates/globalVar.jade
  body(class= bgColor)
    script(type="text/javascript", src="js/geolocate.js")
    include ./templates/scripts.jade
    include ./templates/playerNav.jade
    div.container
      h1.center Log A Kill
      form(action = "/sendingkill" method = "get")
        div(class="input-field col s12 ")
          input(type = "text" name = "DeceasedID" id="deceasedid")
          label(for="deceasedid" class = "active") Deceased ID
        div(class="input-field col s12 ")
          input(class="white-text" type = "text" name = "location" id = "location" )
          label(for="location" class="active white-text") Location
        a(onclick="logPosition()" class = "btn") test
        a(onclick="clear()" class = "btn") clear
        button(type = "submit" name = "action" class="btn waves-effect waves-light blue-grey center") Log


