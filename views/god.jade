doctype html
html(lang="en")
  head
    title= Home
    //link(rel="stylesheet", href="stylesheets/bootstrap.css", type="text/css")
    //link(rel="stylesheet", href="stylesheets/style.css", type="text/css")
    
    //Import Google Icon Font
    link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    //Import materialize.css
    link(type="text/css", rel="stylesheet", href="stylesheets/materialize.min.css",  media="screen,projection")
    
    //Let browser know website is optimized for mobile
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
  body(class="blue-grey darken-3")
    //Import jQuery before materialize.js
    script(type="text/javascript", src="js/jquery.js")
    script(type="text/javascript" src="js/materialize.min.js")
    script(type="text/javascript" src="js/homePage.js")
    script(type="text/javascript" src="js/playerlist.js")
    script(type="text/javascript" src="js/teamlist.js")
    //Navbar
    header
      nav
        div(class="nav-wrapper blue-grey lighten-1")
          a(href="#" class="brand-logo") Assassins
          a(href="#" data-activates="mobile-demo" class="button-collapse") 
            i(class="material-icons") menu
            ul(id="nav-mobile" class="right hide-on-med-and-down")
              li
                a(href="/god") Home
              li
                a(href="/god/list") Lists
              li
                a(href="/god/graphs") Data
              li
                a(href="/" class="waves-effect waves-dark btn") Logout
            ul(class="side-nav" id="mobile-demo")
              li
                a(href="/god/list") Lists
              li
                a(href="/god/graphs") Data
              li
                a(href="/" class="waves-effect waves-dark btn") Logout
    //body        
    div(class="row")
      //column 1
      div(class="col s6 m6")
        //card 1
        div(class="card blue-grey darken-1")
          div(class="card-content white-text")
            span(class="card-title") Players
            table(id="player_table")
              tr()
                th(class="table-header") Name
                th(class="table-header") Role 
                th(class="table-header") Status 
        //card 2 
        div(class="card blue darken-2")
          div(class="card-content white-text")
            span(class="card-title") Chat 
      div(class="col s6 m6")
        div(class="card blue-grey darken-1")
          div(class="card-content white-text")
            span(class="card-title") Teams
            table(id="team_table")
              tr()
                th(class="table-header") TeamID 
                th(class="table-header") Player1 
                th(class="table-header") Player2 
                th(class="table-header") Target 
            
    
