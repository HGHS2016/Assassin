doctype html
html(lang="en")
	head
		title= Home
		//link(rel="stylesheet", href="stylesheets/bootstrap.css", type="text/css")
		//link(rel="stylesheet", href="stylesheets/style.css", type="text/css")

		//Import Google Icon Font
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		//Import materialize.css
		link(type="text/css", rel="stylesheet", href="stylesheets/materialize.min.css",  media="screen,projection")

		//Let browser know website is optimized for mobile
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
	body(class="blue-grey darken-3")
		//Import jQuery before materialize.js
		script(type="text/javascript", src="js/jquery.js")
		script(type="text/javascript" src="js/materialize.min.js")
		script(type="text/javascript" src="js/homePage.js")
		script(type="text/javascript" src="js/list.js")
		script(type="text/javascript" src="js/slack-chat.js")
		//script(type="text/javascript" src="js/teamlist.js")
		//Navbar
		header
			nav
				div(class="nav-wrapper blue-grey lighten-1")
					a(href="#" class="brand-logo") Assassins
					- var btn = ['waves-effect', 'waves-dark', 'btn', 'orange', 'darken-3']
					a(href="#" data-activates="mobile-demo" class="button-collapse") 
						i(class="material-icons") menu
						ul(id="nav-mobile" class="right hide-on-med-and-down")
							li
								a(href="/god") Home
							//li
							//  a(href="/god/list") Lists
							li
								a(href="/god/graphs") Data
							li
								a(href="/god/createTeam") Create Team
							li
								a(href="/" class=btn) Logout
						ul(class="side-nav indigo lighten-2" id="mobile-demo")
							li
								a(href="/god/list" class= "white-text") Lists
							li
								a(href="/god/graphs" class= "white-text") Data
							li
								a(href="/" class=btn) Logout
		//body        
		div(class="row")
			- var card1 = ['blue-grey', 'white-text']
			- var card2 = ['amber', 'black-text']
			- var card3 = ['blue', 'white-text']
			//column 1
			div(class="col s12 m6 l3")
				//card 1
				div(class="card darken-1" class = card1)
					div(class="card-content")
						span(class="card-title") Players
						table(id="player_table")
							tr(class = card1 class = "darken-2")
								th(class="table-header") Name
								th(class="table-header center") Role 
								th(class="table-header center") Status
			//card 2          
			div(class="col s12 m6 l5")
				div(class="card darken-1" class= card2)
					div(class="card-content")
						span(class="card-title") Teams
						table(id="team_table")
							tr(class = "darken-3" class= card2)
								th(class="table-header") TeamID 
								th(class="table-header center") Player1 
								th(class="table-header center") Player2 
								th(class="table-header center") Target 
			//card 3
			div(class="col s12 m6 l4")
				div(class="card darken-2" class= card3)
					div(class="card-content")
						span(class="card-title") Chat 
						div(class="slackchat slack-chat-box")
