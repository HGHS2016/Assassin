doctype html
html(lang="en")
	head
		include ./templates/header.jade
		include ./templates/globalVar.jade
	body(class= bgColor)
		include ./templates/scripts.jade
		include ./templates/godNav.jade
		//body        
		div(class="row")
			//base classes for cards
			- var card1 = ['blue-grey', 'white-text']
			- var card2 = ['amber', 'black-text']
			- var card3 = ['blue', 'white-text']
			- var card4 = ['red', 'black-text']
			//column 1
			div(class="col s12 m6 l4")
				//card 1
				div(class="card darken-1" class = card1)
					div(class="card-content")
						span(class="card-title") Players
						table(id="player_table")
							tr(class = card1 class = "darken-2")
								th(class="table-header") Name
								th(class="table-header center") Role 
								th(class="table-header center") Status
			//card 2          
			div(class="col s12 m6 l8")
				div(class="card darken-1" class= card2)
					div(class="card-content")
						span(class="card-title") Teams
						table(id="team_table")
							tr(class = "darken-3" class= card2)
								th(class="table-header") TeamID 
								th(class="table-header center") Player1 
								th(class="table-header center") Player2 
								th(class="table-header center") Original Target 
			//card 4
			div(class="col s12 m6 l8")
				div(class="card darken-1" class= card4)
					div(class="card-content")
						span(class="card-title") Current Targets
						table(id="target_table")
							tr(class = "darken-3" class= card4)
								th(class="table-header") TeamID
								th(class="table-header center") Player1 
								th(class="table-header center") Player2 
								th(class="table-header center") Current Target
			//card 3
				div(class="col s12 m6 l4")
					div(class="card darken-2" class= card3)
						div(class="card-content")
							span(class="card-title") Chat 
							div(class="slackchat slack-chat-box")
	script(type='text/javascript').
		console.log("hi!");
		var local_data = !{JSON.stringify(pageData)};
	script(type="text/javascript" src="js/homePage.js")
	script(type="text/javascript" src="js/gods.js")
	script(type="text/javascript" src="js/list.js")
	script(type="text/javascript" src="js/slack-chat.js")
