doctype html
html(lang='en')
  head
    include ./templates/header.jade
  body(class="blue-grey darken-3")
  
    h1.center Sign Up
    - if(pageData.failed)
      p.center (Your username may already be taken or your password confirmation may have failed)
    form(action = "/signingup")
      p First Name:
      input(type = "text" name = "first")
      p Last Name:
      input(type = "text" name = "last")
      p Username: 
      input(type = "text" name = "user")
      p Password: 
      input(type = "password" name = "pass")
      p Re-Enter Password: 
      input(type = "password" name = "pass2")
      p Organization Code
      input(type = "text" name = "org")
      p 
      input(type = "submit" value = "Sign Up" class="blue-grey")
    
