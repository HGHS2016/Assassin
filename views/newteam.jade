doctype html
html(lang="en")
  head
    include ./templates/header.jade
    include ./templates/globalVar.jade
  body(class= bgColor)
    include ./templates/scripts.jade
    include ./templates/godNav.jade

    div.row
      - if(pageData.error == 'Team name taken')
        p.center (That team name is taken, please choose another)
      - if(pageData.error == 'p1 and p2 are the same')
        p.center (Both assassins are the same person, please make them different)
      - if(pageData.error == 'unknown error')
        p.center (Error saving data, please try again)
      form(class="col s12", action = '/creatingTeam')
        div(class="input-field col s12 m6")
          select(name = "p1" id = "p1" onchange="console.log(JSON.stringify(document.getElementById('p1').option));")
            option(value="" disabled selected)
          input(name = "teamname" type="text" id="teamname" placeholder="Team Name" autocomplete="off")
        div(class="input-field col s12 m6")
          select(name = "p2" id="p2")
            option(value="" disabled selected)
          button(type="submit" name="action" class="btn waves-effect waves-light blue-grey white-text") Submit Team

  script(type="text/javascript" src="js/newteam.js")
